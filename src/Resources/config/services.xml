<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="xcore_inline.persistence_layer" class="XcoreCMS\InlineEditing\Model\PersistenceLayer\Dbal">
            <argument>%xcore_inline.table_name%</argument>
            <argument type="service" id="doctrine.dbal.default_connection"/>
        </service>

        <service id="xcore_inline.model.content_provider" class="XcoreCMS\InlineEditing\Model\ContentProvider">
            <argument type="collection">
                <argument key="fallback">%xcore_inline.fallback%</argument>
            </argument>
            <argument type="service" id="cache.app"/>
            <argument type="service" id="xcore_inline.persistence_layer"/>
        </service>

        <service id="xcore_inline.twig_extension" class="XcoreCMS\InlineEditingBundle\Twig\InlineEditingExtension"
                 public="true">
            <tag name="twig.extension"/>
            <argument type="service" id="xcore_inline.model.content_provider"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="router"/>
        </service>
    </services>

</container>